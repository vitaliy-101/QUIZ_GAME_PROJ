<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFDFC">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_arrow" />

    <TextView
        android:id="@+id/tv_timer"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_marginStart="133dp"
        android:layout_marginLeft="133dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="134dp"
        android:layout_marginRight="134dp"
        android:background="@drawable/new_but"
        android:gravity="center"
        android:textColor="#FFFFFDFC"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tv_quest"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <TextView
        android:id="@+id/tv_points"
        android:layout_width="131dp"
        android:layout_height="49dp"
        android:layout_marginBottom="75dp"
        android:gravity="center"
        android:textColor="#FF3A3939"
        android:textSize="24sp"

        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tv_quest"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/toolbar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_quest"
        android:layout_width="380dp"
        android:layout_height="168dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/new_but1"
        android:gravity="center"
        android:textColor="#FF3A3939"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_timer" />

    <ImageButton
        android:id="@+id/b_next"
        android:layout_width="64dp"
        android:layout_height="57dp"
        android:layout_marginStart="335dp"
        android:layout_marginLeft="335dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/new_but1"
        android:tint="#FF3A3939"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@android:drawable/ic_media_play" />

    <EditText
        android:id="@+id/ans"
        android:layout_width="356dp"
        android:layout_height="127dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="180dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Введите ответ одним словом"
        android:inputType="textPersonName"
        android:textColor="#FF3A3939"
        android:textColorHighlight="#FF3A3939"
        android:textColorHint="#FF3A3939"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/b_next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_quest"
        app:layout_constraintVertical_bias="0.24" />

    <TextView
        android:id="@+id/tv_rez"
        android:layout_width="360dp"
        android:layout_height="159dp"
        android:layout_marginStart="63dp"
        android:layout_marginLeft="63dp"
        android:layout_marginEnd="66dp"
        android:layout_marginRight="66dp"
        android:layout_marginBottom="120dp"
        android:gravity="center"
        android:textColor="#FF3A3939"
        android:textSize="70sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/b_next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/go_ans"
        android:layout_width="170dp"
        android:layout_height="70dp"
        android:layout_marginStart="126dp"
        android:layout_marginLeft="126dp"
        android:layout_marginEnd="126dp"
        android:layout_marginRight="126dp"
        android:background="@drawable/new_but1"
        android:text="Отправить"
        android:textColor="#FF3A3939"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/b_next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ans" />

</androidx.constraintlayout.widget.ConstraintLayout>